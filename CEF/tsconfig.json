{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "preserveConstEnums": false,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src/",
    "paths": {
      "@views/*": ["./views/*"],
      "@images/*": ["./assets/images/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@altv", "../Types/"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../Types/index.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
